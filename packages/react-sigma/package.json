  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.15",
    "@types/morgan": "^1.9.2",
    "@types/node": "^12.0.0",
    "@types/pg": "^7.14.10",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "clsx": "^1.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "mapineda-react": "0.0.27",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "normalize.css": "^8.0.1",
    "pg": "^8.5.1",
    "query-string": "^6.13.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-scripts": "4.0.1",
    "socket.io": "^3.1.1",
    "socket.io-client": "^3.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "mapineda -S",
    "test": "react-scripts test",
    "check:types": "tsc",
    "start:router": "nodemon bin/index.ts",
    "build:web": "mapineda -E",
    "build:router": "tsc -P tsconfig.node.json",
    "build": "yarn build:web && yarn build:router && yarn tasks",
    "tasks": "ts-node -P tsconfig.node.json tasks/index.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node -P tsconfig.node.json -r dotenv/config"
    }
  },
  "react-scripts": {
    "landing": {
      "entry": "src/landing/index.tsx",
      "output": "build",
      "url": "./"
    },
    "admin": {
      "entry": "src/admin/index.tsx",
      "output": "build/admin",
      "url": "./"
    },
    "default": "admin"
  }
}
