  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "check:types": "tsc",
    "build:view": "mapineda --build -A",
    "start:bin": "nodemon bin/index.ts",
    "build:router": "tsc -P tsconfig.node.json",
    "tasks": "ts-node -P tsconfig.node.json tasks/index.ts",
    "build": "yarn build:view && yarn build:router && yarn tasks"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "react-scripts": {
    "landing": {
      "entry": "src/landing/index.tsx",
      "output": "build"
    },
    "admin": {
      "entry": "src/admin/index.tsx",
      "output": "build/admin"
    },
    "default": "landing"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node -r dotenv/config -P tsconfig.node.json"
    }
  }
