{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "jsx": "react-jsx",
    "outDir": "../dist/lib"
  },
  "include": ["."],
  "exclude": ["../node_modules"]
}
