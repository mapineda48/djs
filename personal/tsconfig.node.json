{
    "compilerOptions": {
        "target": "ES2018",
        "lib": [
            "ESNext"
        ],
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "declaration": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
    },
    "exclude": [
        "node_modules"
    ]
}